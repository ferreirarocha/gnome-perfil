sudo mkdir /opt/gnome-perfil

wget https://github.com/ferreirarocha/gnome-perfil/archive/master.zip

unzip master.zip

sudo mv gnome-perfil-master/gnome-perfil /opt/gnome-perfil
sudo mv gnome-perfil-master/gperfil.svg /opt/gnome-perfil
mkdir ~/.config/gnome-perfil

sudo mv gnome-perfil-master/gnomeperfil.desktop .local/share/applications/gnomeperfil.desktop
